<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
    <title>Home</title>

    <link rel="stylesheet" href="/css/pages/home.css">

</head>

<body>
  <%- include('./partials/nav') %>

    <div class="container py-4">

      <!-- Page Header -->
      <div class="mb-4">
        <h3 class="page-title mb-1">Latest Articles</h3>
        <p class="page-subtitle mb-0">
          Thoughts, ideas, and perspectives from the community
        </p>
      </div>

      <!-- Blog Grid -->
      <div class="row g-4">

        <% if (blogs.length===0) { %>
          <div class="col-12 text-center py-5">
            <p class="empty-state">No blogs yet. Be the first to write one.</p>
          </div>
          <% } %>

            <% blogs.forEach(blog=> { %>
              <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card blog-card">

                  <img src="<%= blog.coverImageURL %>" alt="Blog cover">

                  <div class="card-body d-flex flex-column">
                    <h6 class="blog-title mb-3">
                      <%= blog.title %>
                    </h6>

                    <div class="mt-auto">
                      <a href="/blog/<%= blog._id %>" class="btn btn-primary btn-sm w-100">
                        Read article
                      </a>
                    </div>
                  </div>

                </div>
              </div>
              <% }); %>

      </div>
    </div>

    <%- include('./partials/scripts') %>
</body>

</html>